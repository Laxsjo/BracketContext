{
    "name": "bracketcontext",
    "displayName": "BracketContext",
    "description": "Adds a shortcut context that tracks when the cursor is inside function parameters.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.64.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "bracketcontext.pasteFunction",
                "title": "Paste Test Function"
            }
        ],
        "configuration": {
            "title": "Bracket Context",
            "properties": {
                "bracketcontext.brackets": {
                    "type": "array",
                    "title": "bracket pairs",
                    "description": "A list of all defined bracket pairs.",
                    "items": {
                        "type": "object",
                        "title": "bracket pair",
                        "properties": {
                            "characters": {
                                "type": "array",
                                "description": "A list of two characters that make up the bracket pair. Characters MUST be unique.",
                                "additionalItems": false,
                                "items": [
                                    {
                                        "type": "string",
                                        "maxLength": 1
                                    },
                                    {
                                        "type": "string",
                                        "maxLength": 1
                                    }
                                ]
                            },
                            "name": {
                                "type": "string",
                                "description": "The name that will be used with the corresponding contexts."
                            }
                        }
                    },
                    "default": [
                        {
                            "characters": [
                                "(",
                                ")"
                            ],
                            "name": "round"
                        },
                        {
                            "characters": [
                                "[",
                                "]"
                            ],
                            "name": "square"
                        },
                        {
                            "characters": [
                                "{",
                                "}"
                            ],
                            "name": "curly"
                        }
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.64.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.6.0",
        "glob": "^7.2.0",
        "mocha": "^9.1.3",
        "typescript": "^4.5.4",
        "@vscode/test-electron": "^2.0.3"
    }
}
